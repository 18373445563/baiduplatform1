        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="viewpage"
            android:text="视图滑动切换" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="psw"
            android:text="密码可见、不可见" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
