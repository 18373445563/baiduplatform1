        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="service3test"
            android:text="service测试3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="receiver"
            android:text="监听网络(广播)" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="receiver1"
            android:text="静态注册(广播)" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="receiver2"
            android:text="异地登录(广播)" />


